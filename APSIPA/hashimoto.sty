                                {\bf 題\hspace{10mm}目}\\
                                \vspace*{3mm}
                                {\huge\titlestr}\\
                                \vspace*{35mm}
                                {\bf 指\quad 導\quad 教\quad 員}\\
                                \vspace*{3mm}
                                {\huge\supervisorstr}\\
                                \vspace*{10mm}
                                \hrule
                                \vspace*{7mm}
                                {\bf 報\ \quad 告\ \quad 者}\\
                                \vspace*{5mm}
                                {\huge\authorstr}\\
                                \vspace*{10mm}
                                \hrule
                                \vspace*{2mm}
                                \deadlinestr\\
                                \vspace*{2mm}
                                {\bf\institutestr}
                        \end{center}
                        \vspace*{-20mm}
                \end{minipage}
                \clearpage

               \thispagestyle{empty}
               \setcounter{page}{0}
               \begin{minipage}{10mm}
                       \baselineskip=1.8\normalbaselineskip
